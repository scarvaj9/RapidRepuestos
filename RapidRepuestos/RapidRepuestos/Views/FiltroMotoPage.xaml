<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RapidRepuestos.Views.FiltroMotoPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Filtrar}">
            <StackLayout
                Padding="10,20,10,5">

                <Label Text="Rapid"
                       TextColor="Blue"
                       FontSize="40"
                       />
                <Label Text="Repuestos"
                       TextColor="Blue"
                       FontSize="40"
                       />
                <Switch
                        IsToggled="{Binding Prueba, Mode=TwoWay}">
                    
                </Switch>
                <Label Text="Marca"
                       TextColor="Black"
                       FontSize="30"
                       />
               
                
                <Entry 
                    Placeholder="Ejemplo Auteco"
                    Text="{Binding MarcaMoto, Mode=TwoWay}">

                </Entry>



                <Label Text="Tipo"
                       TextColor="Black"
                       FontSize="30"
                       />

                <Entry 
                    Placeholder="Ejemplo Street"
                    Text="{Binding TipoMoto, Mode=TwoWay}">

                </Entry>


                <Label Text="Moto"
                       TextColor="Black"
                       FontSize="30"
                       />

                <Entry 
                    Placeholder="Ejemplo Pulsar"
                    Text="{Binding MotoExacta, Mode=TwoWay}">
                    
                </Entry>

                <Button
                    Command="{Binding BuscarMoto}"
                    Text="Buscar"
                    TextColor="White"
                    BackgroundColor="Blue"
                    BorderRadius="20">

                </Button>

            </StackLayout>
        </ScrollView>
            
    </ContentPage.Content>
</ContentPage>