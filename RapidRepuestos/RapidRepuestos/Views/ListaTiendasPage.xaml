<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RapidRepuestos.Views.ListaTiendasPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Lista Tiendas">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Tienda}">
            <StackLayout
                Padding="10,20,10,5">

                <Label Text="Rapid"
                       TextColor="Blue"
                       FontSize="40"
                       />
                <Label Text="Repuestos"
                       TextColor="Blue"
                       FontSize="40"
                       />

                <Label Text="piston"
                       TextColor="Black"
                       FontSize="30"
                       />
                <Image
                    Source="lista2">
                </Image>

            </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>