<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RapidRepuestos.Views.ListaTiendasPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Lista Tiendas">
    <ContentPage.Content>
        <StackLayout
            BindingContext="{Binding Tienda}"
            Padding="5">
            <ListView
               ItemsSource="{Binding Repuesto}">
            </ListView>

            </StackLayout>
    </ContentPage.Content>
</ContentPage>